{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
     "strictPropertyInitialization": false,
     "target": "es5",
     "esModuleInterop": true,
     "baseUrl": "./src",
     "paths": {
       "@modules/*": ["modules/*"],
       "@config/*": ["config/*"],
       "@shared/*": ["shared/*"]
     },
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
